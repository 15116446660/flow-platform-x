<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.flow.platform.api.domain">
  <class name="Credential" table="credential">
    <id name="name" type="string" column="name"></id>

    <property name="publicKey" type="string"  column="public_key"></property>
    <property name="privateKey" type="string"  column="private_key"></property>
    <property name="userName" type="string"  column="user_name"></property>
    <property name="password" type="string"  column="password"></property>

    <property name="credentialType" column="credential_type" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">com.flow.platform.api.domain.CredentialType</param>
        <param name="useNamed">true</param>
      </type>
    </property>

    <property name="createdAt" type="java.time.ZonedDateTime">
      <column name="created_at" sql-type="timestamp" default="CURRENT_TIMESTAMP"/>
    </property>

    <property name="updatedAt" type="java.time.ZonedDateTime" update="false">
      <column name="updated_at" sql-type="timestamp" default="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP"/>
    </property>
  </class>
</hibernate-mapping>