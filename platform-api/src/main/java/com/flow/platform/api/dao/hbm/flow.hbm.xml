<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.flow.platform.api.domain">
  <class name="Flow" table="flow">
    <composite-id name="path" >
      <key-property name="path" type="string" length="100" column="path"/>
    </composite-id>

    <property name="name" length="50" column="name"></property>

    <property name="createdAt" type="java.time.ZonedDateTime">
      <column name="created_at" sql-type="timestamp" default="CURRENT_TIMESTAMP"/>
    </property>

    <property name="updatedAt" type="java.time.ZonedDateTime" update="false">
      <column name="updated_at" sql-type="timestamp" default="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP"/>
    </property>
  </class>


  <class name="YmlStorage" table="yml_storage">
    <id name="nodePath" type="string" column="node_path"></id>

    <property name="binary" type="binary"></property>
  </class>
</hibernate-mapping>